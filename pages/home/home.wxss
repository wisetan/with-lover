/* pages/home/home.wxss */
.home-container {
  background-color: var(--background-gray);
  min-height: 100vh;
}

.home-header {
  background: linear-gradient(135deg, var(--primary-blue) 0%, #0050B3 100%);
  padding: var(--spacing-lg) var(--spacing-md);
}

.search-bar {
  position: relative;
  background: #FFFFFF;
  border-radius: var(--border-radius-lg);
  padding: 0 var(--spacing-md);
  display: flex;
  align-items: center;
}

.search-input {
  flex: 1;
  height: 72rpx;
  font-size: var(--font-md);
}

.search-icon {
  font-size: 32rpx;
  color: var(--text-secondary);
}

.quick-actions {
  display: flex;
  justify-content: space-around;
  padding: var(--spacing-lg) 0;
  background: #FFFFFF;
  margin-bottom: var(--spacing-md);
}

.quick-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.quick-icon {
  font-size: 64rpx;
  margin-bottom: var(--spacing-xs);
}

.quick-item text {
  font-size: var(--font-sm);
  color: var(--text-primary);
}

.section {
  margin-bottom: var(--spacing-lg);
}

.section-title {
  font-size: var(--font-lg);
  font-weight: var(--font-weight-bold);
  color: var(--text-primary);
  padding: 0 var(--spacing-md);
  margin-bottom: var(--spacing-md);
}

.companion-scroll {
  white-space: nowrap;
  padding: 0 var(--spacing-md);
}

.companion-item {
  display: inline-block;
  width: 160rpx;
  text-align: center;
  margin-right: var(--spacing-md);
  vertical-align: top;
}

.companion-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin: 0 auto var(--spacing-sm);
}

.companion-name {
  font-size: var(--font-sm);
  color: var(--text-primary);
  margin-bottom: var(--spacing-xs);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.companion-rating {
  font-size: var(--font-sm);
  color: var(--warning-orange);
  display: flex;
  align-items: center;
  justify-content: center;
}

.rating-star {
  margin-right: 4rpx;
}

.hospital-list {
  padding: 0 var(--spacing-md);
}

.loading {
  display: flex;
  justify-content: center;
  padding: var(--spacing-lg);
  color: var(--text-secondary);
}

