<!--pages/profile/profile.wxml-->
<view class="profile-container">
  <!-- 用户信息头部 -->
  <view class="profile-header">
    <view class="user-info">
      <image class="user-avatar" src="{{userInfo ? userInfo.avatarUrl : '/assets/images/default-avatar.png'}}" mode="aspectFill" />
      <view class="user-detail">
        <view class="user-name">{{userInfo ? userInfo.nickName : '未登录'}}</view>
        <view class="user-type" wx:if="{{userType}}">
          {{userType === 'companion' ? '陪诊师' : '患者'}}
        </view>
      </view>
    </view>
    <view class="switch-type" bindtap="switchUserType">
      <text>切换</text>
    </view>
  </view>

  <!-- 菜单列表 -->
  <view class="menu-section">
    <view
      class="menu-item"
      wx:for="{{menuList}}"
      wx:key="title"
      data-path="{{item.path}}"
      bindtap="onMenuTap"
    >
      <view class="menu-icon">{{item.icon}}</view>
      <view class="menu-title">{{item.title}}</view>
      <text class="menu-arrow">›</text>
    </view>
  </view>

  <!-- 关于 -->
  <view class="about-section">
    <view class="about-item">
      <text>关于我们</text>
      <text class="arrow">›</text>
    </view>
    <view class="about-item">
      <text>版本号</text>
      <text class="version">1.0.0</text>
    </view>
  </view>
</view>

