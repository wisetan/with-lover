/* pages/companion-edit/companion-edit.wxss */
.edit-container {
  background-color: var(--background-gray);
  min-height: 100vh;
  padding-bottom: 120rpx;
}

.form-section {
  padding: var(--spacing-md);
}

.section-title {
  font-size: var(--font-lg);
  font-weight: var(--font-weight-bold);
  color: var(--text-primary);
  margin-bottom: var(--spacing-md);
}

.form-item {
  margin-bottom: var(--spacing-md);
  padding: var(--spacing-md);
}

/* 头像上传 */
.avatar-upload {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  border: 2rpx dashed var(--border-color);
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
}

.avatar-upload image {
  width: 100%;
  height: 100%;
}

.upload-placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: var(--text-secondary);
}

.upload-placeholder text:first-child {
  font-size: 48rpx;
  margin-bottom: var(--spacing-xs);
}

.upload-text {
  font-size: var(--font-sm);
}

/* 科室标签 */
.departments {
  display: flex;
  flex-wrap: wrap;
  gap: var(--spacing-sm);
}

.department-tag {
  display: inline-flex;
  align-items: center;
  padding: 8rpx 16rpx;
  background: var(--primary-blue);
  color: #FFFFFF;
  border-radius: var(--border-radius-sm);
  font-size: var(--font-sm);
}

.tag-close {
  margin-left: 8rpx;
  font-size: 32rpx;
  line-height: 1;
}

.add-department {
  padding: 8rpx 16rpx;
  border: 1rpx dashed var(--primary-blue);
  color: var(--primary-blue);
  border-radius: var(--border-radius-sm);
  font-size: var(--font-sm);
}

/* 时间安排 */
.time-schedule {
  background: #FFFFFF;
  border-radius: var(--border-radius-md);
  padding: var(--spacing-md);
}

.time-day {
  display: flex;
  align-items: center;
  padding: var(--spacing-sm) 0;
  border-bottom: 1rpx solid var(--border-color);
}

.time-day:last-child {
  border-bottom: none;
}

.day-name {
  width: 100rpx;
  font-size: var(--font-md);
  color: var(--text-primary);
  flex-shrink: 0;
}

.time-slots {
  display: flex;
  gap: var(--spacing-sm);
  flex: 1;
}

.time-slot {
  flex: 1;
  padding: var(--spacing-sm);
  text-align: center;
  border: 1rpx solid var(--border-color);
  border-radius: var(--border-radius-sm);
  font-size: var(--font-sm);
  color: var(--text-secondary);
  background: #FFFFFF;
}

.time-slot--active {
  background: var(--primary-blue);
  color: #FFFFFF;
  border-color: var(--primary-blue);
}


