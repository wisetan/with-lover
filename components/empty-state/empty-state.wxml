<!--components/empty-state/empty-state.wxml-->
<view class="empty-state">
  <view class="empty-state__icon">{{icon}}</view>
  <view class="empty-state__title">{{title}}</view>
  <view class="empty-state__description" wx:if="{{description}}">{{description}}</view>
  <view class="empty-state__button" wx:if="{{buttonText}}">
    <button class="empty-button" bindtap="handleButtonTap">
      {{buttonText}}
    </button>
  </view>
</view>

